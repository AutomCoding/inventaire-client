<div class="header-wrapper">
  {{#if customHeader}}
    <h2 class="custom-header">{{i18n customHeader}}</h2>
    {{#if progress}}
      <span class="creation-progress">({{progress.current}}/{{progress.total}})</span>
    {{/if}}
  {{else}}
    <h2 class="type-label">{{claim claims 'wdt:P31' false true}}</h2>
    {{#if wikidata}}
      <a href="{{wikidata.wiki}}" class="wikidata-edit soft-grey-button" target="_blank">{{icon 'wikidata'}}{{i18n 'Edit on Wikidata'}}</a>
    {{/if}}
  {{/if}}
</div>
<div class="title"></div>
<div class="claims"></div>
<div class="admin"></div>

<div class="next">
  {{#if creating}}
    {{#if canCancel}}
      <a class="entity-edit-cancel grey-button" tabindex="0">
          {{icon 'times'}}
          {{I18n 'cancel'}}
      </a>
    {{/if}}
    {{#if next}}
      <a id="next" class="navigationButtons light-blue-button" tabindex="0">
        {{icon 'arrow-right'}}
        {{I18n 'next'}}
      </a>
    {{else}}
      {{#if previous}}
        <a id="previous" class="navigationButtons grey-button" tabindex="0">
          {{icon 'arrow-left'}}
          {{I18n 'previous'}}
        </a>
      {{/if}}
      <a class="createAndShowEntity navigationButtons light-blue-button" tabindex="0">
        {{icon 'arrow-right'}}
        {{I18n createAndShowLabel}}
      </a>
      {{#if itemToUpdate}}
        <a class="createAndUpdateItem navigationButtons success-button" tabindex="0">
          {{icon 'plus'}}
          {{I18n "create and update your item with this edition"}}
        </a>
      {{else}}
        <a class="createAndAddEntity navigationButtons success-button" tabindex="0">
          {{icon 'plus'}}
          {{I18n "create and add to your inventory"}}
        </a>
      {{/if}}
    {{/if}}
  {{else}}
    <a href="{{pathname}}" class="showEntity light-blue-button" tabindex="0">
      {{icon 'arrow-left'}}{{I18n returnLabel}}
    </a>
  {{/if}}
</div>

{{partial 'entities:edition_meta' this}}
