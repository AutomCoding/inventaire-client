{{#if editMode}}
  {{!-- input will be wrapped into .ac-container  --}}
  <input type="text" value="{{text}}" class="has-alertbox">
  <a class="tiny-button save" title="Ctrl+Enter" tabindex="0">
    {{icon 'check'}}
    <span>{{i18n 'save'}}</span>
  </a>
  <a class="tiny-button shy-label cancel" title="Esc" tabindex="0">
    {{icon 'times'}}
    <span>{{i18n 'cancel'}}</span>
  </a>
  <a class="tiny-button shy-label dangerous delete" tabindex="0">
    {{icon 'trash'}}
    <span>{{i18n 'delete'}}</span>
  </a>
{{else}}
  <div class="data enterClick" tabindex="0">
    {{#if valueEntity}}
      <div class="value-entity-wrapper">
        {{#with valueEntity}}
          <div class="img-wrapper">
            {{#if pictures}}
              <img src='{{src pictures 48}}' alt='{{label}}'>
            {{/if}}
          </div>
          <div>
            <span class="label">{{label}}</span><br>
            <span class="description">{{description}}</span>
            {{link uri wikidata.wiki 'identifier'}}
          </div>
        {{/with}}
      </div>
    {{else}}
      {{icon 'circle-o-notch' 'fa-spin'}}
    {{/if}}
  </div>
  <div class="edit-wrapper">
    <a class="tiny-button light-blue shy-label edit" tabindex="0">
      {{icon 'pencil'}}
      <span>{{i18n 'edit'}}</span>
    </a>
  </div>
{{/if}}
