<div class="bookCover">
  {{#if pictures}}
    <img src='{{src pictures 120}}' alt='{{title}} cover'>
  {{/if}}
</div>
<div class="bookLiData">
  <h3><a class='showEntity' href="{{pathname}}">{{title}}</a></h3>
  {{#if description}}
    <p class="clamped grey">{{{description}}}</p>
  {{/if}}
  {{#if wikidata}}
    <p>
      {{!-- {{partial 'entities:book_claims' claims}} --}}
      {{claim claims 'P50' true}}  {{!-- author --}}
      {{timeClaim claims 'P577' 'year' true}} {{!-- time of publication --}}
    </p>
  {{else}}
    <p class="isbn-attributes">
      {{{P '50'}}} {{join authors}} <br>
      {{!-- insuffisiant data quality / homogeneity to be displayed
      {{{P 'P577'}}} {{publishedDate}} <br>
      {{{P 'P123'}}} {{publisher}} <br>
      <span class="attribute">{{i18n 'language'}}</span>{{language}} --}}
    </p>
  {{/if}}
</div>

<div class='actions'>
  <a class='showEntity' href="{{pathname}}">
    {{icon 'chevron-right'}}
    {{i18n 'more details'}}
  </a>
  <a class='addToInventory' href="{{pathname}}/add">
    {{icon 'plus'}}
    {{i18n 'add to my inventory'}}
  </a>
  <a class='showEntity' href="{{pathname}}">
    {{icon 'cube'}}
    {{i18n 'who has it?'}}
  </a>
</div>