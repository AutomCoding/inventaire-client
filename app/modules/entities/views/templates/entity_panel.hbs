<div class="entityPanel">
  <div class='cover'>
    {{#if pictures}}
      <img src="{{first pictures}}" alt="{{label}} {{i18n 'cover'}}">
    {{/if}}
  </div>
  <div class="data">
    <h2>{{title}}</h2>
    <p class="uri">{{uri}}</p>
    <h3>
      {{#if wikidata}}
        {{!-- WIKIDATA ATTRIBUTES --}}
        {{partial 'entities:book_claims' claims}}
      {{else}}
        <p class="isbn-attributes">
          {{{P '50'}}} {{join authors}}
        </p>
      {{/if}}
    </h3>
  </div>
</div>