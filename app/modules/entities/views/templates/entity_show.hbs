<div class='row'>
  <div class='small-12 large-4 columns text-left'>
    <p>
      {{#if back}}
        {{partial 'back' this}}
      {{/if}}
    </p>
  </div>
</div>


<div class='row'>
  <div class='small-12 large-8 columns large-centered'>


    {{!-- ENTITY DATA  --}}
    <div class='row panel'>

      {{!-- COVER --}}
      <div class='small-12 large-4 columns text-center'>
        {{#if pictures}}
          <img src="{{firstElement pictures}}" alt="{{title}} {{i18n 'cover'}}">
        {{/if}}
      </div>

      <div class='small-12 large-8 columns'>
        {{!-- TITLE --}}
        <h2>{{title}}</h2>

        {{!-- AUTHOR --}}
        <h3>
          {{#if wikidata}}
            {{claim claims 'P50'}}
          {{else}}
            <span>{{#each authors}}{{this}} {{/each}}</span>
          {{/if}}
        </h3>

        {{!-- DESCRIPTION --}}
        {{#if descOverflow}}
          <a id='toggleDescLength' class='medium right'> {{icon 'chevron-down'}}{{icon 'chevron-up' 'hidden'}} </a>
        {{/if}}
        <p id='shortDesc' class='grey'>{{limit description 500}}</p>
        <p id='fullDesc' class='grey hidden'>{{description}}</p>

        {{!-- ACTIONS --}}
        <div class="entityActions">
          <div class="entityAction">
            <ul class="button-group">
              <li>
                <a data-tooltip id='addToInventory' class="has-tip button success" title="{{i18n 'Add it to my inventory'}}">
                  {{icon 'plus'}}
                  {{i18n 'I have it'}}
                </a>
              </li>
              <li>
                <a class="button success" data-options="is_hover:true" data-dropdown="have">{{icon 'chevron-down'}}</a>
                <ul id="have" class="small f-dropdown" data-dropdown-content>
                  <li class="dropdownLegend">{{i18n "I have it and it is available for:"}}</li>
                  <li><a id="giving">{{icon 'heart'}} <span>{{i18n 'Giving'}}</span></a></li>
                  <li><a id="lending">{{icon 'history'}} <span>{{i18n 'Lending'}}</span></a></li>
                  <li><a id="selling">{{icon 'money'}} <span>{{i18n 'Selling'}}</span></a></li>
                  <li><a id="inventorying">{{icon 'cube'}} <span>{{i18n 'I just want to say I have it'}}</span></a></li>
                </ul>
              </li>
            </ul>
          </div>

          <div class="entityAction">
            {{#if following}}
              <a data-tooltip class="button grey" id='stopFollowing' title="{{i18n 'Click to stop notifications for this object'}}">
                {{icon 'rss'}} {{i18n "Following activity"}}
              </a>
            {{else}}
              <a data-tooltip class="has-tip button secondary" id='followActivity' title="{{i18n 'Get notified when an item is added here'}}">
                {{icon 'rss'}} {{i18n "Follow activity"}}
              </a>
            {{/if}}
          </div>
        </div>
        {{partial 'wiki_sitelinks' this}}
        <div class='check'></div>
      </div>
    </div>


    {{!-- PERSONAL ITEMS  --}}

    <div id="personalGroup" class="row">
      <h3 class="subheader personalHeader">{{i18n "Your items"}}</h3>
      <div id="personal" class="small-12 large-12 columns"></div>
    </div>

    {{!-- FRIENDS ITEMS  --}}

    <div id="friendsGroup" class="row">
      <h3 class="subheader friendsHeader">{{i18n "Friends' items"}}</h3>
      <div id="friends" class="small-12 large-12 columns"></div>
    </div>

    {{!-- PUBLIC ITEMS  --}}

    <div id="publicGroup" class="row">
      <h3 class="subheader publicHeader">{{i18n 'Public items'}}</h3>
      <div id="public" class="small-12 large-12 columns"></div>
    </div>

  </div>
</div>