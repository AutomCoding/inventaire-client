{{#if showDetails}}
  <a class="showItem" href="{{pathname}}" title="{{user.username}}">
    <img src="{{src user.picture 48}}" alt="{{user.username}}">
    <div class="right-part">
      <p class="username">{{user.username}}</p>
      {{#if details}}<p class="details">{{details}}</p>{{/if}}
      {{!-- {{#unless restricted}}{{#if notes}}<p class="notes">{{notes}}</p>{{/if}}{{/unless}}
      <div class="request-box">{{partial 'inventory:item_request_box' this}}</div> --}}
    </div>
  </a>
{{else}}
  <a class="showItem" href="{{pathname}}" title="{{user.username}}">
    <img src="{{src user.picture 32}}" alt="{{user.username}}">
  </a>
{{/if}}
