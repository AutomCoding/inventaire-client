<div class="items-lists">
  <div class="{{hash.prefix}}PersonalItems"></div>
  <div class="{{hash.prefix}}NetworkItems"></div>
  <div class="{{hash.prefix}}PublicItems"></div>
  <div class="{{hash.prefix}}NearbyPublicItems"></div>
  <div class="{{hash.prefix}}OtherPublicItems"></div>
</div>
{{#unless hash.disabled}}
  <div class="items-lists-loader">
    {{partial 'loader' inline=true}}
    <span class="label">{{i18n 'fetching available books...'}}</span>
  </div>
{{/unless}}
