<div class="controls">
  <h2>{{serie.label}}</h2>

  <div class="control">
    <label for="partsNumber">{{i18n 'number of parts'}}</label>
    <select id="partsNumber">
      {{#each partsNumberPickerRange}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>

  <a id="save" class="tiny-success-button">{{I18n 'save'}}</a>
</div>

<div id="withOrdinal">
  {{#each withOrdinal}}
    <div class="part {{#if placeholder}}placeholder{{/if}}">
      <span class="ordinal">{{ordinal}}.</span>
      <span class="label">{{label}}</span>
    </div>
  {{/each}}
</div>

<div id="withoutOrdinal">
  {{#each withoutOrdinal}}
    <div class="part">
      <span class="label">{{label}}</span>
    </div>
  {{/each}}
</div>

  <div id="conflict">
{{#if hasConflicts}}
    {{#each conflict}}
      <div class="part">
        <span class="ordinal">{{ordinal}}.</span>
        <span class="label">{{label}}</span>
      </div>
    {{/each}}
  </div>
{{/if}}
