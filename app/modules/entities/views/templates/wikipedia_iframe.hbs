<div class="wikipedia-iframe">
  <div class="wiki-menu-bar">
    <div class="wikipediaPreviewToggler">
      <h4>
      <a class="showWikipediaPreview">
        {{i18n 'on_wikipedia' this}}
        {{icon 'caret-down'}}
        {{icon 'caret-up' 'hidden'}}
      </a>
      </h4>
    </div>
    <div class="wiki-sitelinks">
      {{#if wikipedia}}
        <span class="wikipedia">
          <a href="{{wikipedia.url}}" target="_blank">
          {{icon 'wikipedia'}} {{i18n 'see on Wikipedia'}}</a>
          <a href="{{wikipedia.url}}?veaction=edit" target="_blank">
          {{i18n 'Edit'}}</a>
        </span>
      {{/if}}
      {{#if wikisource}}
        <a class="wikisource" href="{{wikisource.url}}" target="_blank">
        {{icon 'wikisource'}} {{i18n 'read online'}}</a>
      {{/if}}
      {{#if wikidata}}
        <a class="wikidata" href="{{wikidata.url}}" target="_blank">
        {{icon 'wikidata'}}Â {{i18n "edit data"}}</a>
      {{/if}}
    </div>
  </div>
  {{!-- wikipedia iframe will be appened here --}}
</div>