{{#unless hidePicture}}
  {{#if image.url}}
    <div class="cover">
      <img src="{{src image.url 300}}" alt="{{label}} {{i18n 'cover'}}">
      {{partial 'entities:photo_credits' image.credits}}
    </div>
  {{/if}}
{{/unless}}

<div class="data">
  <div class="entity-title-and-edit">
    {{#if workPage}}
      <h2>{{label}}</h2>
    {{else}}
      <h2><a href="{{pathname}}" class="showEntity link">{{label}}</a></h2>
    {{/if}}
    {{partial 'entities:edit_data' this}}
  </div>
  <p class="uri">{{uri}}</p>

  <p class="description {{#if descOverflow}}clamped{{/if}}">
    {{{description}}}
  </p>
  {{#if descOverflow}}
    <a class='toggler'>
      {{icon 'chevron-down'}}
      {{icon 'chevron-up' 'hidden'}}
    </a>
  {{/if}}
  <div class="attributes">
    {{partial 'entities:work_claims' this}}
  </div>
</div>
