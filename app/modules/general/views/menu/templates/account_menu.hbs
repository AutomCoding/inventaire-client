<li class="has-form">
 {{input search}}
</li>
{{#if scanner}}
  <li class="active"><a id="scanner" href="{{scanner}}">
{{else}}
  <li data-tooltip class="has-tip"
  title="{{i18n 'Only available from mobile yet'}}">
  <a id="scanner" class="disabled">
{{/if}}
    {{icon 'barcode'}}{{i18n 'Scan a book'}}</a>
  </li>
<li>
  <a id="name">
    {{username}}
    <img id="pic" src="{{src picture 64}}">
  </a>
</li>
<li id="before-requests"></li>
{{!-- li#requests will be inserted here --}}
<li id="before-notifications"></li>
{{!-- li#notifications will be inserted here --}}

<li class="has-dropdown">
  <a>
    {{icon 'cog'}}
    <span class="labels">{{i18n 'Settings'}}</span>
  </a>
  <ul class="dropdown">
    <li><a id="edit">{{icon 'user'}} {{i18n 'Edit Profile'}}</a></li>
    <li><a id="logout">{{icon 'sign-out'}} {{i18n 'Sign Out'}}</a></li>
  </ul>
</li>