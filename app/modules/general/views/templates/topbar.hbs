<div id="topBar" class="sticky">
  {{!-- stickyness isnt refreshed on screen size change: reload before wanting to change settings --}}
  <nav class="top-bar" data-topbar data-options="{{inlineOptions options}}">
    <ul class="title-area">
      <li class="name">
        <h1 id="topheader">
        <a id="home">{{{Q 'Q815410' null 'inventaire'}}}  </a></h1>
      </li>
      <li class="toggle-topbar menu-icon">
        {{!-- a and span required by Foundation for the menu icon --}}
        <a><span></span></a>
      </li>
    </ul>

    <section class="top-bar-section">
      {{!-- Left Nav Section --}}
      <ul class="left">
        <li data-tooltip id="inventorySections" class="has-tip breadcrumb"
        title="{{i18n 'no other category for now'}}">
          <a>{{icon 'chevron-right'}} {{i18n 'books'}}</a>
        </li>
        <li id="currentUser" class="hidden breadcrumb">
          <a>{{icon 'chevron-right'}} <span id="currentUsername"></span></a>
        </li>
      </ul>
      {{!-- Right Nav Section --}}
      <ul id="accountMenu" class="right"></ul>
    </section>
  </nav>
</div>