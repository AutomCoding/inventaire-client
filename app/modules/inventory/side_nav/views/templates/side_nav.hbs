<div id="one"></div>
<div id="two">
  <section id="groups">
    <div class="listHeader">
      <h4 class="header">{{i18n 'groups'}}</h4>
    </div>
    <div id="groupsList"></div>
  </section>
  <section id="friends">
    <div id='usersListHeader' class="listHeader">
      <h4 class="header"></h4>
      <a class="close hidden">{{icon 'times'}}</a>
      <div class="show-for-small-only">
        <a class="listToggler">{{icon 'caret-up'}}</a>
        <a class="listToggler hidden">{{icon 'caret-down'}}</a>
      </div>
    </div>
    <div id="usersList"></div>
  </section>
  <div id="userSearch" class="bottomSearch">
    <input id="userField" type="text" placeholder="{{i18n 'find friends'}}...">
  </div>
  <div id="memberSearch" class="bottomSearch hidden">
    <input id="memberField" type="text" placeholder="{{i18n 'filter group members'}}...">
  </div>
</div>