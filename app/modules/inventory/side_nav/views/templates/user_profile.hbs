<div class="userProfile">
  {{partial 'unselect'}}
  {{#if picture}}
    <div class="circle-pic" style="background-image: url({{src picture 150 150 true}})">
    </div>
    {{#if mainUser}}
      <a id="changePicture">
        {{icon 'camera'}}{{i18n 'change picture'}}
      </a>
    {{/if}}
  {{/if}}
  <h3 class="username">{{username}}</h3>
  {{partial 'inventory/side_nav:user_profile_bio' this}}
  {{#if inventoryLength}}
    <div class="stats">
      <span class="inventoryLength select serif">
        {{i18n 'books:'}}  {{inventoryLength}}
      </span>
    </div>
  {{/if}}
  {{#unless mainUser}}
    {{partial 'inventory/side_nav:user_menu' this}}
  {{/unless}}
</div>