<td class="checkbox-cell">
  <input type="checkbox"
    {{#if selected}}checked{{/if}} {{#if needInfo}}disabled{{/if}}
  >
</td>
<td>{{title}}</td>
<td>{{authors}}</td>
<td>{{isbn}}</td>
<td>
  {{#if needInfo}}
    <a class="addInfo tiny-warning-button">{{i18n 'need more information'}}</a>
  {{else}}
    {{errorMessage}}
  {{/if}}
</td>
