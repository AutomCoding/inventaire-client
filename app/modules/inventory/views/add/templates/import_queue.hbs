<h3>2/ {{i18n 'select the books you want to add'}}</h3>
<section>
  <table>
    <thead>
      <tr>
        <th class="selected"><input type="checkbox" checked></th>
        <th class="title">{{i18n 'title'}}</th>
        <th class="authors">{{i18n 'authors'}}</th>
        <th class="isbn">{{i18n 'isbn'}}</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</section>

<h3>3/ {{i18n 'select the settings to apply to the selected books'}}</h3>
<section class="settings">
  <label for="transaction">{{i18n 'transaction'}}</label>
  <div id="transaction" class="select-button-group">
    {{partial 'inventory:form:button_group' transactions}}
  </div>
  <label>{{i18n 'visibility'}}</label>
  <div id="listing" class="select-button-group">
    {{partial 'inventory:form:button_group' listings}}
  </div>
</section>

<h3>4/ {{i18n 'import this batch'}}</h3>
<div class="validation">
  <a id="validate" class="button success radius">{{i18n 'import'}}</a>
</div>
