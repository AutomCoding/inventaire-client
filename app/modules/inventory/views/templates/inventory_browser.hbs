<div id="browserControls">
  <div id="browserFilters">
    <span class="control-label">{{I18n 'filters'}}</span>
    <div class="selectors">
      <div id="author"></div>
      <div id="genre"></div>
      <div id="subject"></div>
    </div>
    <div class="loading"></div>
  </div>
  <div id="displayControls" class="dropdown-wrapper">
    <button class="{{displayMode}}" aria-controls="displayOptions" aria-haspopup="menu">
      <div class="{{#if cascade}}shown{{/if}}">{{icon 'th-large'}}</div>
      <div class="{{#if table}}shown{{/if}}">{{icon 'align-justify'}}</div>
      <span class="label">{{I18n 'display_mode'}}</span>
    </button>
    <ul id="displayOptions" role="menu">
      <li><a id="cascade" tabindex="0">{{icon 'th-large'}} {{I18n 'cascade'}}</a></li>
      <li><a id="table" tabindex="0">{{icon 'align-justify'}} {{I18n 'table'}}</a></li>
    </ul>
  </div>
</div>
<div id="itemsView"></div>
<div id="filterPreview"></div>
