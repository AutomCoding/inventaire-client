{{#if restricted}}
  {{#if busy}}
    <div class="busy-box">
      {{icon 'sign-out'}}{{i18n 'unavailable'}}
    </div>
  {{else}}
    {{#if hasActiveTransaction}}
      <a class="mainUserRequested">
        {{i18n 'main_user_requested'}}
      </a>
    {{else}}
      {{#unless inventorying}}
        <div class="itemBox">
          <button class="requestItem">
            {{icon 'comments'}}
            {{I18n 'send request'}}
          </button>
        </div>
      {{/unless}}
    {{/if}}
  {{/if}}
{{/if}}