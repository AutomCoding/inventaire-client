<div class="transactionBox dropdown-wrapper">
  {{#if restricted}}
    <a class="current itemShow" href="{{pathname}}">
      {{icon currentTransaction.icon}}{{i18n currentTransaction.labelShort}}
    </a>
  {{else}}
    <button class="current {{currentTransaction.id}}" aria-controls="transactions-{{_id}}" aria-haspopup="menu">
      <span class="icon">
        {{icon currentTransaction.icon}}
      </span>
      <span class="rest">
        <span class="label">{{i18n currentTransaction.labelShort}}</span>
        {{icon 'caret-down'}}
      </span>
    </button>
    <ul id="transactions-{{_id}}" role="menu">
      <li class="dropdown-label capitalized">{{i18n 'available for'}}:</li>
      {{#each transactions}}
        <li>
          <button id="{{id}}" class="transaction {{classes}}">
            {{icon icon}} {{i18n label}}
          </button>
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>
