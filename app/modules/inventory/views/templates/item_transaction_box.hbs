<div class="transactionBox {{currentTransaction.id}} has-dropdown" role="button" tabindex="0" {{#unless restricted}}aria-expanded="false" aria-controls="transactions-{{_id}}"{{/unless}}>
  {{#if restricted}}
    <a class="current itemShow">
      {{icon currentTransaction.icon}}{{i18n currentTransaction.labelShort}}
    </a>
  {{else}}
    <a class="current">
      <span class="icon">
        {{icon currentTransaction.icon}}
      </span>
      <span class="rest">
        <span class="label">{{i18n currentTransaction.labelShort}}</span>
        {{icon 'caret-down'}}
      </span>
    </a>
    <ul id="transactions-{{_id}}" class="dropdown">
      <li class="dropdown-label capitalized">{{i18n 'available for'}}:</li>
      {{#each transactions}}
        <li>
          <button id="{{id}}" class="transaction {{classes}}">
            {{icon icon}} {{i18n label}}
          </button>
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>