{{#unless restricted}}
  <div class="listingMenu {{currentListing.id}}">
    <a class="current" data-dropdown="{{cid}}-listing-menu">
      <span class="icon">{{icon currentListing.icon}}</span>
      <span class="rest">
        <span class="label">{{i18n currentListing.label}}</span>
        {{icon 'caret-down'}}
      </span>
    </a>
    <ul id="{{cid}}-listing-menu" data-options="align:right"
    class="tiny f-dropdown" data-dropdown-content>
      <li class="label2 capitalized">{{i18n 'change visibility:'}}</li>
      {{#each listings}}
        <li>
          <a id="{{id}}" class="listing {{classes}}">
            {{icon icon}} {{i18n label}}
          </a>
        </li>
      {{/each}}
      <li><label>{{i18n 'other operations:'}}</label></li>
      <li>
        <a class="remove dark-grey">{{icon 'trash-o'}} {{I18n 'delete'}}</a>
      </li>
    </ul>
  </div>
{{/unless}}