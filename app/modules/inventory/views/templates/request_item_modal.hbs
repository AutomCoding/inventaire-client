<div class="header">
  <div class="userTransaction">
    <div class="user">
      <a class="select" href="{{user.pathname}}">
        <img class="profilePic" src="{{src user.picture 64}}">
      </a>
      <a class="select" href="{{user.pathname}}">
        <span class="username serif">{{user.username}}</span>
      </a>
    </div>
    <div class="current transaction {{item.transaction}}">
      {{icon item.currentTransaction.icon}}
      {{item.currentTransaction.labelShort}}
    </div>
  </div>

  <div class="item">
    <div class="cover">
      <a href="{{item.pathname}}" rel="nofollow">
        {{#if item.picture}}
          <img src="{{src item.picture 100}}">
        {{/if}}
      </a>
    </div>
    <span class="title">{{item.title}}</span>
    <span class="entity">{{item.entity}}</span>
    <p class="comment">{{item.comment}}</p>
  </div>
</div>

<textarea id="message" name="request-item">
  {{i18n 'item_request_text_suggestion' item}}
</textarea>

<a id="sendItemRequest" class="button success radius bold">
  {{icon 'send'}}
  {{i18n 'send request'}}
  <a class="loading"></a>
</a>
<div class="checkWrapper">
  <span class="check"></span>
</div>