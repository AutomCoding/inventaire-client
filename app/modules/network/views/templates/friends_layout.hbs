<section>
  <h2 id="friendsRequestsHeader">{{i18n 'pending friends requests'}}</h2>
  <div id="friendsRequests"></div>

  {{partial 'network:users_search_header'}}
  <div class="friendsAndSearch">
    {{partial 'network:users_search_input'}}
    {{partial 'network:users_search'}}
  </div>
</section>

<section>
  <h2>{{i18n 'invite friends'}}</h2>
  <form>
    <label for="invitations">{{i18n 'by email address'}}</label>
    {{!-- wrapper required for to append an alert box --}}
    <div class="wrapper">
      <textarea id="invitations" name="invitations" placeholder="{{i18n 'emails separated by a coma'}}">{{rawEmails}}</textarea>
    </div>
    <a id="sendInvitations" class="button success bold radius">{{i18n 'send invitations'}}</a>
  </form>
  <div class="output">
    {{#each emailsInvited}}
      {{!-- emails are escaped during validation --}}
      <p class="email-sent">{{{i18n 'email_invitation_sent' 'email' this}}} {{icon 'check-circle'}}</p>
    {{/each}}
  </div>
  <div class="usersAlreadyThere hidden">
    <h3>{{i18n 'Look who was already there! Friend request sent'}}</h3>
    <div id="usersAlreadyThere"></div>
  </div>
</section>