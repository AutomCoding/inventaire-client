<div class="actions">
  {{#if status_invited}}
    <a class="accept">{{i18n 'accept invitation'}}</a>
    <a class="decline">{{i18n 'decline'}}</a>
  {{/if}}
  {{#if status_requested}}
    <div>
      <p class="requested">
        {{i18n 'you requested to join is waiting for approval'}}
      </p>
      <a class="cancelRequest">{{i18n 'cancel request'}}</a>
      <span class="check"></span>
    </div>
  {{/if}}
  {{#if status_none}}
    <a class="joinRequest">{{i18n 'request to join the group'}}</a>
    <span class="check"></span>
  {{/if}}
</div>
{{#unless mainUserIsMember}}
  <p class="restrictions">
    {{icon 'globe'}} {{i18n "as you are not a member of the group, you can only see members' public books"}}
  </p>
{{/unless}}
