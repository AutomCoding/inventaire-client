{{#if mainUserIsAdmin}}
  <section>
    <label for="editName">{{i18n 'edit group name'}}</label>
    {{input editName 'check'}}
  </section>

  <section>
    {{partial 'network:searchability' searchability}}
  </section>

  <section>
    <label for="editDescription">{{i18n 'edit group description'}}</label>
    {{textarea editDescription 'check'}}
    <div class="saveCancel hidden">{{partial 'save_cancel'}}</div>
    <div class="check"></div>
  </section>

  <section>
    {{partial 'general:behaviors:change_picture' this}}
  </section>
  <hr>
{{/if}}

<section id="groupControls">
  {{#if userCanLeave}}
    {{#if userIsLastUser}}
      <a class="destroy">
        {{icon 'trash'}} {{I18n 'destroy group'}}
    {{else}}
      <a class="leave">
        {{icon 'sign-out'}} {{I18n 'leave group'}}
    {{/if}}
    </a>
  {{else}}
    <span class="leave disabled" title="{{i18n "leave_button_disabled"}}">
      {{icon 'ban'}} {{i18n 'leave group'}}
    </span>
    <p class="reason">{{i18n "leave_button_disabled"}}</p>
  {{/if}}
</section>
