<section class="level-1">
  <a id="usersTab" href="/network/users" class="tab {{#if users}}active{{/if}}">
    {{icon 'user'}}
    <span class="label">{{I18n 'users'}}</span>
    <span class="counter">{{friendsRequestsCount}}</span>
  </a>
  <a id="groupsTab" href="/network/groups" class="tab {{#if groups}}active{{/if}}">
    {{icon 'group'}}
    <span class="label">{{I18n 'groups'}}</span>
    <span class="counter">{{groupsRequestsCount}}</span>
  </a>
</section>
{{#if users}}
  <section class="users-level-2 level-2">
    {{partial 'network:network_sub_tabs' subTabsData}}
  </section>
{{/if}}
{{#if groups}}
  <section class="groups-level-2 level-2">
    {{partial 'network:network_sub_tabs' subTabsData}}
  </section>
{{/if}}
