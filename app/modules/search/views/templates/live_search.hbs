<div class="searchSettingsTogglerWrapper">
  <button class="searchSettingsToggler" aria-controls="searchControls">
    {{icon 'chevron-up'}}
    <span class="label">{{I18n 'search settings'}}</span>
  </button>
</div>

<div id="searchControls" class="sections">
  <div class="entitySections">
    {{#each sections.entity}}
      <button data-category="entity" data-name="{{@key}}" class="searchSection {{#if selected}}selected{{/if}} {{#if included}}included{{/if}}" aria-controls="searchResults">
        {{I18n label}}
      </button>
    {{/each}}
  </div>
  {{!-- Typo on purpose: .socialSections is blocked by this popular ad blocker list: https://secure.fanboy.co.nz/fanboy-annoyance.txt--}}
  <div class="sozialSections">
    {{#each sections.social}}
      <button data-category="social" data-name="{{@key}}" class="searchSection {{#if selected}}selected{{/if}} {{#if included}}included{{/if}}" aria-controls="searchResults">
        {{I18n label}}
      </button>
    {{/each}}
  </div>
</div>

<div class="resultsWrapper">
  <ul id="searchResults" class="results"></ul>
  <div class="loaderWrapper"></div>
</div>

<div class="alternatives">
  <span class="label">{{i18n "Can't find what you are searching?"}}</span>
  <div class="propositions">
    <a class="createEntity" tabindex="0">{{icon 'plus'}}{{I18n 'create'}}</a>
  </div>
</div>

<ul class="shortcuts">
  <li>
    <div class="key"><span class="symbol">↓</span>{{I18n 'down'}}</div>
    {{I18n 'next result'}}
  </li>
  <li>
    <div class="key"><span class="symbol">↑</span>{{I18n 'up'}}</div>
    {{I18n 'previous result'}}
  </li>
  <li>
    <div class="key"><span class="symbol">↩</span>{{I18n 'enter'}}</div>
    {{I18n "go to result's page"}}
  </li>
  <li>
    <div class="key"><span class="symbol">⇟</span>{{i18n 'PgDn'}}</div>
    {{I18n 'next category'}}
  </li>
  <li>
    <div class="key"><span class="symbol">⇞</span>{{i18n 'PgUp'}}</div>
    {{I18n 'previous category'}}
  </li>
</ul>
