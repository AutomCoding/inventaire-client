<h2 class="layout-title">{{I18n 'notifications'}}</h2>

<section class="global">
  <h3 class="first">{{i18n 'global'}}</h3>
  {{> 'toggler' global}}
  <p class="warning {{#if showWarning}}shown{{/if}}">
    {{icon 'warning'}} {{i18n warning}}
  </p>
</section>

<div class="rest">
  <div class="rest-fog local-fog {{#if showWarning}}shown{{/if}}"></div>
  <section class="news">
    <h3>{{i18n 'news'}}</h3>
    {{> 'toggler' inventories_activity_summary}}
    <div class="summary-periodicity checkWrapper">
      <div class="periodicity-fog local-fog {{#if showPeriodicity}}shown{{/if}}"></div>
      <div class="flex-row-center-center">
        <span>{{{I18n 'activity_summary_periodicity_tip'}}}</span>
        <select id="periodicityPicker" name="periodicity">
          {{#each days}}
            <option value="{{num}}" {{#if selected}}selected{{/if}}>{{num}}</option>
          {{/each}}
        </select>
      </div>
      <span class="check"></span>
    </div>
  </section>
  <section class="friends">
    <h3>{{i18n 'friends'}}</h3>
    {{> 'settings:email_me_when'}}
    {{> 'toggler' friendship_request}}
    <hr>
    {{> 'toggler' friend_accepted_request}}
  </section>

  <section class="groups">
    <h3>{{i18n 'groups'}}</h3>
    {{> 'settings:email_me_when'}}
    {{> 'toggler' group_invite}}
    <hr>
    {{> 'toggler' group_acceptRequest}}
  </section>

  <section class="exchanges">
    <h3>{{i18n 'exchanges'}}</h3>
    {{> 'settings:email_me_when'}}
    {{> 'toggler' your_item_was_requested}}
    <hr>
    {{> 'toggler' update_on_your_item}}
    <hr>
    {{> 'toggler' update_on_item_you_requested}}
  </section>

</div>
