<h2 class="layout-title">{{I18n 'profile'}}</h2>

<section>
  <h3 class="with-tip">{{i18n 'username'}}</h3>
  <p class="note">{{I18n 'username_tip'}}</p>
  {{input usernamePicker}}
</section>

<section>
  <h3 class="with-tip">{{i18n 'presentation'}}</h3>
  <p class="note">{{I18n 'a few words on you?'}}</p>
  <div class="bio-wrapper checkWrapper ctrlEnterClickWrapper">
    <textarea name="bio" id="bio" class="ctrlEnterClick" aria-label="{{i18n 'presentation'}}">{{bio}}</textarea>
    <div class="bioLimit"></div>
    <button id="saveBio" class="save light-blue-button">{{I18n 'save'}}</button>
    <span class="check"></span>
  </div>
</section>

<section>
  <h3 class="first">{{i18n 'profile pic'}}</h3>
  {{> 'general:behaviors:change_picture' this}}
</section>

<section class="geolocation">
  <h3>{{I18n 'geolocation'}}</h3>
  <p class="position-status">
    {{#if hasPosition}}
      {{i18n "you have a position set"}}<br>
      <span class="coordinates">{{position.lat}}, {{position.lng}}</span>
    {{else}}
      {{i18n "your position isn't set yet"}}
    {{/if}}
  </p>
  {{> 'map:position_picker_button'}}
</section>

{{iconLinkText name='check' url=userPathname linkClasses="done success-button" I18n='done'}}
