<div class="header">
  <div class="handle">
    <div class="togglers">
      <span>{{icon 'caret-right'}}</span>
      <span class="hidden">{{icon 'caret-down'}}</span>
    </div>
    <span class="operation-type {{patchType}}">{{patchType}}</span>
  </div>
  <div class="entity">
    <a class="label showEntity link" href="{{entity.pathname}}">{{entity.label}}</a>
    <p class="meta">
      <span class="type">{{entity.type}}</span>
      <span class="patch-id">{{_id}}</span>
    </p>
  </div>
  <div class="summary">
    {{#with summary}}
      <div class="property">
        <p class="property-label">{{propertyLabel}}</p>
        <p class="property-uri">{{property}}</p>
      </div>
      <div class="changes">
        {{#if removed}}<p class="removed">{{removed}}</p>{{/if}}
        {{#if added}}<p class="added">{{added}}</p>{{/if}}
      </div>
    {{/with}}
  </div>
  <p class="time" title="{{localTimeString timestamp}}">{{timeFromNow timestamp}}</p>
</div>
<div class="operations hidden">
  {{> 'entities:editor:patch_operations' operations}}
</div>
