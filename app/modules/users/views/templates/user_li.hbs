<div class="left-box">
  <a class="select">
    <img src="{{src picture 64}}">
  </a>
</div>
<div class="right-box">
  <a class="select">
    <span class="username">{{username}}</span>
  </a>
  <div class="userMenu">
    {{#if friends}} 
      <a class="light-grey friend" data-options="align:top" data-dropdown="{{username}}-menu">
        {{icon 'chevron-down'}}</a>
        <ul id="{{username}}-menu" class="tiny f-dropdown" data-dropdown-content>
           <li>
              <a class="unfriend action">
                {{icon 'minus'}} {{i18n 'unfriend'}}
              </a>
            </li>
        </ul>
    {{/if}}
    {{#if userRequests}} 
      <a class="cancel action">
          {{icon 'ban'}} {{i18n 'cancel request'}}
      </a>
    {{/if}}
    {{#if othersRequests}} 
      <a class="accept action">
          {{icon 'check'}} {{i18n 'confirm'}}
      </a>
      <a class="discard action">
          {{icon 'minus'}} {{i18n 'delete request'}}
      </a>
    {{/if}}
    {{#if public}} 
      <a class="request action">
          {{icon 'plus'}} {{i18n 'add friend'}}
      </a>
    {{/if}}
  </div>
</div>