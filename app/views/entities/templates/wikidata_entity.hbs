<div class='row'>
  <div class='small-12 large-8 columns'>
    {{#each P31}}
      <h4 class="subheader qLabel" resource='http://www.wikidata.org/entity/{{this}}'></h4>
    {{/each}}

    <div class='small-12 large-4 columns text-center'>
      {{#if pictures}}
        <img src='{{firstElement pictures}}' alt='{{label}} cover'>
      {{/if}}
    </div>

    <div class='small-12 large-8 columns'>
      <h3>{{label}}</h3>
      <h4 class="subheader">{{description}}</h4>
      <p class="grey"> {{i18n 'see on'}}
        <a href="{{wikipedia}}" target='_blank'>wikipedia</a>
        {{i18n 'or'}}
        <a href="http://www.wikidata.org/entity/{{id}}" target='_blank'>wikidata</a>
      </p>
      <h4>{{#each authors}}{{this}} {{/each}}</h4>
      <h4 {{P '50'}}></h4>
      {{#each P50}}
        <span {{Q this}}></span>
      {{/each}}

      <a id='selectEntity' class=''>
        <i class='fa fa-plus'></i>&nbsp;
        {{i18n 'Add to my inventory'}}
      </a>
      <div class='check'></div>
    </div>
  </div>

  <div class="small-12 large-4 columns">
    <div id='article'></div>
  </div>
</div>
