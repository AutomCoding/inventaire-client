<div class="small-4 large-4 columns text-center">
  <img src="{{pictures}}" alt="{{title}} cover">
</div>
<div class="small-4 large-4 columns">
  <h3>{{title}}</h3>
  <h4>{{#each authors}}{{this}}{{/each}}</h4>
  <p>{{publisher}} ({{publishedDate}})</p>
  <ul class="button-group">
    <li>
      <a id="validPreview" class="button success">
        <i class="fa fa-plus"></i>&nbsp;
        That's it!
      </a>
    </li>
    <li>
      <a id="discardPreview" class="button alert">
        <i class="fa fa-minus"></i>&nbsp;
        Nop.
      </a>
    </li>
  </ul>
</div>