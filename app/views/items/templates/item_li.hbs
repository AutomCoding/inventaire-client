<div class="itemLiWrapper">
  <div class="cover small-12 large-offset-4 large-2 columns text-center">
    {{#if pictures}}
      <img src="{{firstElement pictures}}">
    {{/if}}
  </div>

  <div class="desc small-12 large-6 columns">

    <div class="right text-right">
      {{#if profilePic}}
        {{username}}
        <img class="profilePic" src="{{profilePic}}">
      {{else}}
        {{username}}
      {{/if}}
      <p>
        <small>
          {{created}}
        </small>
        {{#unless restricted}}
          <a class="edit">{{icon 'pencil'}}</a>
          <a class="remove">{{icon 'times'}}</a>
        {{/unless}}
      </p>
    </div>

    <h4><a class="itemShow" href="{{pathname}}">{{title}}</a></h4>

    {{#if comment}}
      <p class="comment grey">
        {{comment}}
      </p>
    {{/if}}


  </div>
</div>