<div class="small-4 large-3 columns"><a href="{{_id}}">{{title}}</a></div>
<div class="small-4 large-3 columns">{{username}}</div>
<div class="small-4 large-3 columns">{{tags}}</div>
<div class="small-4 large-3 columns">{{visibility}}</div>
<div class="small-4 large-3 columns">{{transactionMode}}</div>
<div class="small-4 large-3 columns">{{comment}}</div>
<div class="small-12 large-3 columns">
  {{created}}
  {{#unless restricted}}
    <a class="edit"><i class="fa fa-pencil"></i></a>
    <a class="remove"><i class="fa fa-times"></i></a>
  {{/unless}}
</div>