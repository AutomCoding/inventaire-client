<div class="itemLiWrapper">
  <div class="cover small-12 large-offset-4 large-2 columns text-center">
    {{#if pictures}}
      <img src="{{firstElement pictures}}" alt="{{title}} {{i18n 'cover'}}">
    {{/if}}
  </div>

  <div class="desc small-12 large-6 columns">

    <div class="right text-right">
      {{#if profilePic}}
        {{username}}
        <img class="profilePic" src="{{profilePic}}" alt="{{username}} {{i18n 'profile pic'}}">
      {{else}}
        {{username}}
      {{/if}}
      <p>
        <small>
          {{created}}
        </small>
        {{#unless restricted}}
          <a class="edit"><i class="fa fa-pencil"></i></a>
          <a class="remove"><i class="fa fa-times"></i></a>
        {{/unless}}
      </p>
    </div>

    <h4><a href="{{_id}}">{{title}}</a></h4>

    {{#if comment}}
      <p class="comment">
      {{comment}}
      </p>
    {{/if}}


  </div>
</div>