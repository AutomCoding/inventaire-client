<div class="itemLiWrapper">
  <div class="cover small-12 large-offset-4 large-2 columns text-center">
    {{#if pictures}}
      <img src="{{firstElement pictures}}" alt="{{title}} cover">
    {{/if}}
  </div>

  <div class="desc small-12 large-6 columns">

    <div class="right">
      {{#if profilePic}}
        {{username}}
        <img class="profilePic" src="{{profilePic}}" alt="{{username}} profile pic">
      {{else}}
        {{username}}
      {{/if}}
    </div>

    <h4><a href="{{_id}}">{{title}}</a></h4>

    {{#if comment}}
      <p class="comment">
      {{comment}}
      </p>
    {{/if}}
    <small>
      {{created}}
    </small>

    {{#unless restricted}}
      <a class="edit"><i class="fa fa-pencil"></i></a>
      <a class="remove"><i class="fa fa-times"></i></a>
    {{/unless}}

  </div>
</div>