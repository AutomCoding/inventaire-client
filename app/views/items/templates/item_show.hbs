<div class="row">

  <div class="small-12 large-3 columns text-center">
    <div id="picture" class="block"></div>
  </div>

  <div class="small-12 large-6 columns">
    <div class="panel">
      <h2>{{title}}</h2>
      {{#if entityPathname}}
        <a id="entity" href="{{entityPathname}}">{{icon 'plus'}}{{i18n 'more details'}}</a>
      {{/if}}
    </div>

    <div class="panel">
      <h3>{{i18n 'user_comment' 'username' username}}
          {{#unless restricted}}
            <a id="editComment" title="{{i18n 'edit comment'}}">{{icon 'pencil'}}</a>
          {{/unless}}
      </h3>
        <p id="comment">
          {{pre comment}}
        </p>
        <div id="commentEditor" class='hidden'>
          <textarea placeholder='{{i18n 'something to say about this item?'}}...'>{{comment}}</textarea>
          <a id="cancelCommentEdition" class="button grey">{{i18n 'cancel'}}</a>
          <a id="validateComment" class="button success">{{i18n 'edit'}}</a>
        </div>
    </div>

    {{#unless restricted}}
      <div class="panel">
        <h3>{{i18n 'Personal notes'}}
              <a id="editNotes" title="{{i18n 'edit notes'}}">{{icon 'pencil'}}</a>
        </h3>
          <p id="notes">
            {{pre notes}}
          </p>
          <div id="notesEditor" class='hidden'>
            <textarea placeholder=''>{{notes}}</textarea>
            <a id="cancelNotesEdition" class="button grey">{{i18n 'cancel'}}</a>
            <a id="validateNotes" class="button success">{{i18n 'edit'}}</a>
          </div>
      </div>
    {{/unless}}
  </div>


  <div class="small-12 large-3 columns">

    <div class="panel">
      {{#if profilePic}}
        <img class="large-profilePic" src="{{profilePic}}" alt="{{username}} {{i18n 'profile pic'}}">
      {{/if}}
      <h3 class="subheader">{{username}}</h3>
      <div>
        <p>
          {{i18n 'Created:'}} {{created}}
        </p>
      </div>
      <div id="editPanel"></div>
      {{#unless restricted}}
        <a id="destroy" class="dark-grey button">{{icon 'trash-o'}} {{i18n 'Delete'}}</a>
      {{/unless}}
    </div>


  </div>
</div>

<div class="row">
  <div class="small-12 large-12 columns">
    <div id="entity" class="grey"></div>
  </div>
</div>