{
  "module": "es6",
  "compilerOptions": {
    "baseUrl": "./app",
    "paths": {
      "#assets/*": [ "assets/*" ],
      "#behaviors/*": [ "modules/general/behaviors/*" ],
      "#lib/*": [ "lib/*" ],
      "#modules/*": [ "modules/*" ],
      // Set last to let other paths have priority
      "#app/*": [ "*" ],
    }
  },
  "exclude": [ "node_modules", "public", "vendor", "scripts/assets" ]
}