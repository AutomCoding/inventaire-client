{
  "name": "inventaire-client",
  "description": "a libre collaborative resources mapper powered by open-knowledge (client-side)",
  "license": "AGPL-3.0",
  "homepage": "https://inventaire.io",
  "repository": {
    "type": "git",
    "url": "http://github.com/inventaire/inventaire-client"
  },
  "type": "module",
  "engines": {
    "node": ">= 14"
  },
  "alias": {
    "app": "./app",
    "api": "./app/api",
    "assets": "./app/assets",
    "lib": "./app/lib",
    "modules": "./app/modules"
  },
  "scripts": {
    "build": "./scripts/build",
    "edit-mentions": "libreoffice ./scripts/assets/mentions.csv && ./scripts/update_mentions.js",
    "generate-sitemaps": "npm run node-exec ./scripts/sitemaps/generate.js",
    "lint": "eslint -c .eslintrc app test scripts",
    "lint-fix": "./scripts/lint_fix",
    "lint-staged": "./scripts/lint_staged",
    "node-exec": "node --no-warnings --loader ./custom-loader.js --es-module-specifier-resolution=node",
    "postinstall": "./scripts/postinstall",
    "start": "npm run watch",
    "test": "./scripts/run_unit_tests",
    "test-fast": "./scripts/run_fast_tests",
    "update-i18n": "./scripts/update_i18n",
    "update-mentions": "npm run node-exec ./scripts/update_mentions",
    "update-toc": "doctoc README.md",
    "watch": "./scripts/watch"
  },
  "dependencies": {
    "autosize": "^4.0.2",
    "backbone.marionette": "git+https://github.com/inventaire/backbone.marionette.git#parcel-module",
    "blueimp-canvas-to-blob": "^3.28.0",
    "cropper": "^2.3.0",
    "enumerate-devices": "^1.1.0",
    "fork-awesome": "^1.1.7",
    "handlebars": "^4.7.6",
    "imagesloaded": "^4.1.4",
    "isbn2": "^0.1.8",
    "js-cookie": "^2.2.1",
    "leaflet": "^1.7.1",
    "leaflet.markercluster": "^1.4.1",
    "leven": "^2.1.0",
    "masonry-layout": "^4.2.2",
    "node-polyglot": "^2.4.0",
    "papaparse": "^4.6.3",
    "quagga": "^0.12.1",
    "wikidata-lang": "^2.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "config": "^1.31.0",
    "doctoc": "^1.4.0",
    "eslint": "^7.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "iconv-lite": "^0.4.24",
    "mocha": "^8.1.3",
    "node-fetch": "^2.6.1",
    "parcel": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "git+https://github.com/gregtillbrook/parcel-plugin-bundle-visualiser.git#ca5440fc6",
    "parcel-plugin-handlebars-precompile": "git+https://github.com/inventaire/parcel-plugin-handlebars-precompile.git#0979112",
    "sass": "^1.26.11",
    "should": "^13.2.3",
    "sinon": "^1.17.3",
    "tiny-chalk": "^2.0.0",
    "wikidata-cli": "^3.0.6",
    "wikidata-sdk": "^5.16.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "browserslist": [
    ">0.25%"
  ]
}
